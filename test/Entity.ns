--Basic code to test class mechanism


class Entity { 
    x, y float64 = 0, 0

    routine Routine
    name string
    Entity(name string, x, y float64){
        this->name = name
        move(x, y)
    }

    move(x float64, y float64){
        this->x = x
        this->y = y
    }

    update(dt float64){
        if routine != null {
            routine->update(dt)
        }
    }
}

func main(){
    Entity e("Alice")
    e:move(5,6)
    print(e->name)
}