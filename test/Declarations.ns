--Syntax specification for declarations

--everywhere is visible to any file, "global", gvar cannot be declared in a function
gvar everywhere bool = 0

func main() int {
    --Four ways to declare a primitive or object

    --Equals syntax to constant
    var a char = 1

    --Class declaration syntax
    --Objects can only be initialized in this way, uninitialized must rely on assignment
    var b short(2)

    --Use of reference value, works as assignment for Objects
    var c int = b

    --Uninitialized variable
    var d long

    --Other primitive types are float, float64 and string
    --All number primitives (not string) "extend" number

    return 0
}